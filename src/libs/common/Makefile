include ../../../build.opts

.PHONY: all clean

all: $(BUILD_ROOT)/prog-libs/hos-common-0.0.1.hl

$(BUILD_ROOT)/prog-libs/hos-common-0.0.1.hl: Data/Binary.hs Data/Elf.hs Hos/Common/Bundle.hs Hos/Common/Types.hs common.yaml
	mkdir -p $(BUILD_ROOT)/prog-libs
	$(JHC) -L $(JHC_LIBS_PREFIX) --build-hl=common.yaml
	mv hos-common-0.0.1.hl $(BUILD_ROOT)/prog-libs/

clean:
	rm -f $(BUILD_ROOT)/prog-libs/hos-common-0.0.1.hl
